<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- RED Stripe -->
    <item

        android:top="-200dp"
        android:right="-350dp"
        android:left="-250dp"
        android:bottom="100dp">

        <rotate
            android:fromDegrees="150">

            <shape
                android:shape="line">
                <size
                    android:width="200dp" />
                <stroke android:color="@android:color/holo_red_dark"
                    android:width="200dp"/>
            </shape>

        </rotate>
    </item>

    <!-- GREEN Stripe -->
    <item
        android:top="-200dp"
        android:right="-350dp"
        android:left="-250dp"
        android:bottom="100dp">

        <rotate
            android:fromDegrees="140">

            <shape
                android:shape="line">

                <size
                    android:width="200dp" />
                <stroke android:color="@android:color/holo_green_dark"
                    android:width="80dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
