<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:angle="180"
                android:endColor="@color/colorTextSuccess"
                android:startColor="@color/colorTextWarning" />
        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white" />

        </shape>
    </item>
</layer-list>