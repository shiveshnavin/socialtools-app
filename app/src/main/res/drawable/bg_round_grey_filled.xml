<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >

    <shape  android:shape="rectangle"   >

        <solid
            android:color="@color/material_grey_500" >
        </solid>

        <stroke
            android:width="1dp"
            android:color="@color/material_grey_500" >
        </stroke>


        <padding
            android:left="10dp"
            android:right="10dp"
            android:top="2dp"
            android:bottom="2dp"/>

        <corners
            android:radius="10dp"   >
        </corners>

    </shape>

</item>


<item >
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"   >

        <solid
            android:color="@color/material_grey_300" >
        </solid>

        <stroke
            android:width="1dp"
            android:color="@color/material_grey_300" >
        </stroke>


        <padding
            android:left="10dp"
            android:right="10dp"
            android:top="2dp"
            android:bottom="2dp"/>

        <corners
            android:radius="10dp"   >
        </corners>

    </shape>
</item>
</selector>