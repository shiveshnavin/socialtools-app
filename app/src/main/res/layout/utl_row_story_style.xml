<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/offwhite"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/cardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="135dp">


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/cont_image"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:background="@drawable/bg_round_oval_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.dotpot.app.views.RoundedImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus_grey_12dp" />

        </LinearLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/subscribe"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:fontFamily="@font/font_text"
            android:paddingTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Create Stores that are good" />


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/ic_plus_grey_12dp"
            android:textColor="@color/material_grey_500"
            android:layout_marginTop="2dp"
            android:id="@+id/subscribe"
            android:textSize="11dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:text="Subscribe" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>