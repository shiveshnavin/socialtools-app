<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_rounded_bottom_nav"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_gravity="top"
        android:gravity="top"
        android:id="@+id/fragment_history_bottom_sheet_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="3dp"
        android:focusable="true"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_info_about_48dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:textColor="@color/grey_900"
                android:layout_width="match_parent"
                android:maxLines="20"
                android:fontFamily="@font/font_subtext"
                android:id="@+id/title"
                android:text="@string/title"
                android:textSize="18sp"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"  />


            <TextView
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:textColor="@color/grey_700"
                android:layout_width="match_parent"
                android:fontFamily="@font/font_subtext"
                android:id="@+id/text"
                android:text="@string/tse"
                android:textSize="16sp"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grey_700" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="right"

        >


        <Button
            android:padding="16dp"
            android:id="@+id/done"
            android:text="@string/ok"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>