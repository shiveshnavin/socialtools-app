<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/bg_selector_dark"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:ellipsize="marquee"
        android:singleLine="true"
        android:padding="10dp"
        android:background="@drawable/bg_round_filled_dark"
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_game"
        android:gravity="center"
        android:text="Awards : 18"
        android:textColor="@color/colorGoldenWin"
        android:textSize="@dimen/text_xhead"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorGoldenWin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/img"
        android:src="@drawable/ic_logo"
        android:layout_width="128dp"
        android:layout_height="128dp" />


    <TextView
        android:layout_margin="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img"
        android:text="@string/request_complete"
        android:textColor="@color/colorTextPrimary"
        android:fontFamily="@font/font_style"
        android:id="@+id/text"
        android:paddingTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_margin="10dp"
        app:cornerRadius="60dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pokeBtn2"
        android:id="@+id/pokeBtn"
        android:text="@string/start_game"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:layout_margin="10dp"
        app:cornerRadius="60dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pokeBtn"
        android:id="@+id/pokeBtn2"
        android:text="@string/dismiss"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>